extends _layout

block content
    .row
        .col-sm-6.col-sm-offset-3
            .panel.panel-default
                .panel-body
                    h1 New User
                    form(action="/signup" method="POST")
                        .form-group
                            label Username
                            input.form-control(type="text" name="username")
                        .form-group
                            label Password
                            input.form-control(type="password" name="password")
                        button.btn.btn-primary(type="submit") Sign Up!